<%- include('partials/header.ejs'); %>
<div class="container" style="width:30%;">
    <h1>New Event</h1>
<form action="/event" method="POST" >
  <div class="form-group">
      <input  class="form-control" type="text" name="name" placeholder="Name">
  </div>    
  <div class="form-group">
      <input  class="form-control" type="number" name="price" placeholder="Price" step="1" min="0">
  </div>    
  <div class="form-group">
      <input  class="form-control" type="text" name="image" placeholder="Image">
  </div>   
  <div class="form-group">
      <input  class="form-control" type="text-area" name="description" placeholder="Description">
  </div>      
   <div class="form-group">   
      <button  class="btn btn-primary btn-large btn-block" type="">Submit!</button>
   </div> 
   <a href="/event">GO Back</a>    
  
</form>
</div>

<%- include('partials/footer.ejs'); %>
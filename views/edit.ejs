<%- include('partials/header.ejs'); %>
<div class="container" style="width:30%;">
    <h1>Edit Event</h1>
<form action="/event/<%=event._id%>?_method=PUT" method="POST" >
  <div class="form-group">
      <input  class="form-control" type="text" name="event[name]" value="<%=event.name%>">
  </div>    
  <div class="form-group">
      <input  class="form-control" type="number" name="event[price]" value="<%=event.price%>">
  </div>   
  <div class="form-group">
      <input  class="form-control" type="text" name="event[image]" value="<%=event.image%>">
  </div>   
  <div class="form-group">
      <input  class="form-control" type="text-area" name="event[description]" value="<%=event.description%>">
  </div>      
   <div class="form-group">   
      <button  class="btn btn-primary btn-large btn-block" type="">Submit!</button>
   </div> 
   <a href="/event">GO Back</a>    
  
</form>
</div>

<%- include('partials/footer.ejs'); %>